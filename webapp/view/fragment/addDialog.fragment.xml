<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="addDialog" title ="Add Dialog" beforeOpen ="addInput">
        <content>
            <HBox 
                height="60px" 
                alignItems="Center"
                justifyContent="Center">
                <Label text="Content" class="sapUiSmallMarginEnd"/>
                <Input value="{root>/value}"/> 
            </HBox>
        </content>
        <endButton>
                <Button text="close" press=".onClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>